---
const { icon, titel, paragraph } = Astro.props;
---

<div class="deli">
  <img src={icon} alt="icon" />
  <h4>{titel}</h4>
  <p>{paragraph}</p>
</div>

<style>
  .deli {
    /* border: 1px solid red; */
    width: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    cursor: pointer;

    img {
      width: 170px;
      height: 170px;
    }


    h4 {
      font-size: 24px;
      margin-top: -3px;
      margin-bottom: 10px;
    }
    p {
      font-size: 18px;
      color: gray;
      margin-top: -5px;
    }
  }
</style>
